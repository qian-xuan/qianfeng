<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sunshineboy.qianfeng.mapper.IndexMapper">
    <resultMap id="userMap" type="sunshineboy.qianfeng.bean.User">
        <result property="hobby" column="hobby" jdbcType="ARRAY" typeHandler="org.apache.ibatis.type.ArrayTypeHandler"/>
    </resultMap>
    <parameterMap id="para" type="sunshineboy.qianfeng.bean.User">
        <parameter property="hobby" jdbcType="ARRAY" typeHandler="org.apache.ibatis.type.ArrayTypeHandler"/>
    </parameterMap>
    <delete id="del" parameterType="int">
        delete from tb_user where id = #{id}
    </delete>
    <select id="getUserList" resultMap="userMap">
        select * from tb_user;
    </select>
    <insert id="addUser" parameterMap="para">
        insert into tb_user(name, age, sex, hobby, text) values (#{name}, #{age}, #{sex}, #{hobby}, #{text})
    </insert>
</mapper>